<div class="login-box">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      <% end %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

<style type="text/css">
  body {
    margin: 0;
    background-color: #6eafbf;
  }

  .login-box {
    margin-top: 14%;
    height: auto;
    margin-left: 36%;
    width: 300px;
    padding: 20px;
    font-size: 14px;
    border-radius: 3px;
    background-color: #fbfbfb;
  }

  .login-box div {
    margin-bottom: 20px;
  }

  .login-box .field input {
    width: 200px;
    padding: 1px;
  }
</style>
